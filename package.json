{
  "name": "@manuth/eslint-plugin-typescript",
  "version": "2.0.0",
  "description": "A set of personal eslint-rulesets for TypeScript-projects",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "ESLint",
    "Presets",
    "Rules"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/ESLintPresets.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/ESLintPresets/issues"
  },
  "homepage": "https://github.com/manuth/ESLintPresets#readme",
  "scripts": {
    "build": "tsc -p .",
    "rebuild": "npm run clean && npm run build",
    "watch": "tsc -p . --watch",
    "clean": "rimraf ./lib",
    "lint": "eslint --max-warnings 0 --ext .js,.jsx,.ts,.tsx ./src",
    "lint-compact": "npm run lint -- -f compact || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "lodash.merge": "^4.6.2",
    "upath": "^1.2.0"
  },
  "devDependencies": {
    "@manuth/tsconfig": "^1.2.2",
    "@types/dedent": "^0.7.0",
    "@types/eslint": "^6.8.1",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash.merge": "^4.6.6",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/eslint-plugin-tslint": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "dedent": "^0.7.0",
    "eslint": "^7.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsdoc": "^25.4.3",
    "fs-extra": "^9.0.0",
    "mocha": "^7.2.0",
    "rimraf": "^3.0.2",
    "temp-filesystem": "^1.1.3",
    "tslint": "^6.1.2",
    "typescript": "^3.9.3",
    "typescript-eslint-plugin": "^1.2.1"
  }
}
