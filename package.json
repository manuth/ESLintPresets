{
  "name": "@manuth/eslint-plugin-typescript",
  "version": "2.1.2",
  "description": "A set of personal eslint-rulesets for TypeScript-projects",
  "author": "Manuel Thalmann <m@nuth.ch>",
  "license": "MIT",
  "keywords": [
    "ESLint",
    "Presets",
    "Rules"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "homepage": "https://github.com/manuth/ESLintPresets#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manuth/ESLintPresets.git"
  },
  "bugs": {
    "url": "https://github.com/manuth/ESLintPresets/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "rebuild": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "clean": "npm run build -- --clean && rimraf ./lib",
    "lint-base": "eslint --max-warnings 0 --ignore-pattern \"!.eslintrc.js\"",
    "lint": "npm run lint-base -- --ext .js,.jsx,.ts,.tsx ./src .eslintrc.js",
    "lint-compact": "npm run lint -- -f compact || exit 0",
    "test": "mocha",
    "prepare": "npm run rebuild"
  },
  "dependencies": {
    "lodash.merge": "^4.6.2",
    "upath": "^1.2.0"
  },
  "devDependencies": {
    "@manuth/eslint-plugin-typescript": "^2.1.2",
    "@manuth/temp-files": "^1.2.0",
    "@manuth/tsconfig": "^1.2.3",
    "@types/dedent": "^0.7.0",
    "@types/eslint": "^7.2.2",
    "@types/fs-extra": "^9.0.1",
    "@types/lodash.merge": "^4.6.6",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "dedent": "^0.7.0",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.3.1",
    "fs-extra": "^9.0.1",
    "mocha": "^8.1.3",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",
    "typescript-eslint-plugin": "^1.2.1"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "*",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.3.3",
    "typescript": "*"
  }
}
